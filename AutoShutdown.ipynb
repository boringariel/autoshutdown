    "#module\n",
    "import sys\n",
    "from os import system\n",
    "from webbrowser import open\n",
    "from PyQt5.QtWidgets import QApplication, QMainWindow, QAction, QPushButton, QLineEdit, QLabel, QRadioButton, QMessageBox\n",
    "\n",
    "class MyApp(QMainWindow):\n",
    "\n",
    "    def __init__(self):\n",
    "        super().__init__()\n",
    "        \n",
    "        self.initUI()\n",
    "    \n",
    "    def initUI(self):\n",
    "        \n",
    "        infoAction = QAction('프로그램 정보', self)\n",
    "        infoAction.triggered.connect(self.showmsg)\n",
    "        \n",
    "        infoAction2 = QAction('도움말', self)\n",
    "        infoAction2.triggered.connect(self.showhelp)\n",
    "\n",
    "        menubar = self.menuBar()  #menubar\n",
    "        menubar.setNativeMenuBar(False)\n",
    "        infoMenu = menubar.addAction(infoAction)\n",
    "        infoMenu2 = menubar.addAction(infoAction2)\n",
    "\n",
    "        \n",
    "        self.setWindowTitle('장비를 정지합니다')  #title\n",
    "        #self.move(300, 300)  #창 위치\n",
    "        #self.setGeometry(300, 300, 300, 200)  #창 위치와 크기를 한번에 지정\n",
    "        self.resize(320, 250)  #창 크기\n",
    "   \n",
    "        #시간 안내글\n",
    "        self.timeinfo = QLabel(self)\n",
    "        self.timeinfo.move(40,50)\n",
    "        self.timeinfo.setText('타이머')\n",
    "        \n",
    "        #시간 입력창\n",
    "        self.ss = QLineEdit(self)\n",
    "        self.ss.move(100,55)\n",
    "        self.ss.setText('0')\n",
    "        self.ss.resize(50,20)\n",
    "        \n",
    "        #옵션 안내글\n",
    "        self.optinfo = QLabel(self)\n",
    "        self.optinfo.move(40,100)\n",
    "        self.optinfo.setText('옵션')\n",
    "        \n",
    "        #옵션 라디오버튼\n",
    "        self.opt = QRadioButton('타이머 종료 후 컴퓨터 종료', self)\n",
    "        self.opt.move(100,95)\n",
    "        self.opt.setChecked(True)\n",
    "        self.opt.resize(200,20)\n",
    "        self.opt.clicked.connect(self.optRad)\n",
    "        \n",
    "        self.opt2 = QRadioButton('타이머 종료 후 컴퓨터 재시작', self)\n",
    "        self.opt2.move(100,115)\n",
    "        self.opt2.resize(200,20)\n",
    "        self.opt2.clicked.connect(self.optRad)\n",
    "\n",
    "        \n",
    "        #설정 버튼\n",
    "        self.sbtn = QPushButton('초 후로 설정', self)\n",
    "        self.sbtn.move(175,52)\n",
    "        self.sbtn.resize(90,25)\n",
    "        self.sbtn.clicked.connect(self.sset)\n",
    "        \n",
    "        self.rbtn = QPushButton('예약', self)\n",
    "        self.rbtn.move(50,190)\n",
    "        self.rbtn.resize(95,25)\n",
    "        self.rbtn.clicked.connect(self.run)\n",
    "        \n",
    "        self.rbtn = QPushButton('예약 취소', self)\n",
    "        self.rbtn.move(170,190)\n",
    "        self.rbtn.resize(95,25)\n",
    "        self.rbtn.clicked.connect(self.cancel)\n",
    "        \n",
    "        #표시창\n",
    "        self.set_time = 0\n",
    "        self.set_opt = 's'\n",
    "        \n",
    "        self.oinfo = QLabel(self)\n",
    "        self.oinfo.move(40,150)\n",
    "        self.oinfo.resize(250,20)\n",
    "        \n",
    "        self.oinfo_show()        \n",
    "        self.show()\n",
    "        \n",
    "    def sset(self):\n",
    "        self.set_time = int(self.ss.text())\n",
    "        self.oinfo_show()\n",
    "        \n",
    "    def optRad(self):\n",
    "        if self.opt.isChecked():\n",
    "            self.set_opt = 's'\n",
    "            self.oinfo_show()\n",
    "        elif self.opt2.isChecked():\n",
    "            self.set_opt = 'r'\n",
    "            self.oinfo_show()\n",
    "        \n",
    "    def run(self):\n",
    "        system('shutdown -%s -f -t %d' %(self.set_opt, self.set_time))\n",
    "        self.oinfo.setText('%d 초 후 %s하도록 예약했습니다!' %(self.set_time, self.opt_show))\n",
    "        \n",
    "    def cancel(self):\n",
    "        system('shutdown -a')\n",
    "        self.oinfo.setText('종료 예약을 취소했습니다!')\n",
    "        \n",
    "    def oinfo_show(self):\n",
    "        if self.set_opt == 'r':\n",
    "            self.opt_show = '재시작'\n",
    "        else:\n",
    "            self.opt_show = '종료'\n",
    "        self.oinfo.setText('현재 설정: %d 초 후 %s' %(self.set_time, self.opt_show))\n",
    "        \n",
    "    def showmsg(self):\n",
    "        msg = QMessageBox.information(self, \"<프로그램 정보\", \n",
    "                          '''<font size = 5><b> 장비를 정지합니다 v1.0 </b></font><br><br>\n",
    "                          제작자: 강지완 <a href=\"http://jwkang3929.blog.me\">(제작자 블로그)</a><br><br>\n",
    "                          이 프로그램은 General Public License를 따릅니다 <a href=\"https://github.com/boringariel/autoshutdown/blob/master/AutoShutdown.ipynb">(소스코드 보기)</a>''')\n",
    "            \n",
    "    def showhelp(self):\n",
    "        open('https://github.com/boringariel/autoshutdown')\n",
    "\n",
    "        \n",
    "if __name__ == '__main__':\n",
    "    \n",
    "    app = QApplication(sys.argv)\n",
    "    ex = MyApp()\n",
    "    sys.exit(app.exec_())"
   ]
  }
